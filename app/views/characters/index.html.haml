= render 'toolbar'
%table.table.table-hover.character-list
  %thead
    %tr
      %th character
      %th meaning
      %th type
      %th level
      %th logs
      %th first occurrence
      %th
  %tbody
    - @characters.each do |character|
      %tr{:class => character.type.downcase}
        %td.character-jp
          - if character.character.nil?
            %img.character-image{:src => "#{character.image}"}/
          - else
            = character.character
        %td= character.meaning
        %td
          .marker{class: character.type.downcase}
          = character.type
        %td= character.logs.last.srs
        %td= character.logs.size
        %td= character.created_at.strftime(Rails.application.config.date_time_format_long)
        %td= link_to 'Show', character_path(character)
= will_paginate @characters, :renderer => BootstrapPagination::Rails
